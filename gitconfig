[user]
    email = verto@verto.me
	name = Everton Cardoso

[github]
    user = verto

[color]
        ui = auto

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
	new = green bold

[color "status"]
        added = yellow
        changed = green
        untracked = cyan

[alias]
        st = status
        ci = commit
        br = branch
        co = checkout
        df = diff
        lg = log -p
	update = !sh -c \"git fetch && git rebase origin/$(git symbolic-ref HEAD | sed -e 's,.*/\\(.*\\),\\1,')\"

[merge]
        tool = mymeld
        conflictstyle = diff3

[emerge]
        tool = tortoisemerge
[mergetool "mymeld"]
        cmd = meld --diff \"$BASE\" \"$LOCAL\" --diff \"$BASE\" \"$REMOTE\" --diff \"$LOCAL\" \"$BASE\" \"$REMOTE\" \"$MERGED\"
 
[core]
	editor = vim
