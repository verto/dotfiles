# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Customize to your needs...
for config_file (~/dev/dotfiles/zsh/*.zsh) source $config_file

export PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"

# added by travis gem
[ -f /home/verto/.travis/travis.sh ] && source /home/verto/.travis/travis.sh

#tmux attach &> /dev/null

#if [[ ! $TERM =~ screen ]]; then
#    exec tmux
#fi
#
export SCALA_HOME=/home/verto/dev/scala
export VIM_HOME=/home/verto/dev/vim
export JAVA_HOME=/home/verto/dev/jdk1.8.0_161
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export LANGUAGE=en_US.UTF-8
export PATH=$VIM_HOME/bin:$PATH:$SCALA_HOME/bin:$JAVA_HOME/bin
export PATH=$PATH:/usr/local/go/bin:$HOME/go/bin:$HOME/dev/jet
export GOPATH=/home/verto/dev/projects/go
export PATH=$PATH:$GOPATH/bin

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
